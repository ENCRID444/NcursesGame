int main() {
    // Setup random
    srand(time(NULL));
    
    // Muat skor tertinggi dari file
    muatSkorTertinggi();
    
    // Setup ncurses
    initscr();
    cbreak();
    noecho();
    curs_set(1);
    
    bool programBerjalan = true;
    
    while(programBerjalan) {
        // Tampilkan menu awal
        menuAwal();
        
        // Tampilkan instruksi input
        mvprintw(20, 50, "Masukkan pilihan (1 atau 2): ");
        refresh();
        
        // Baca input menu
        char pilihan = getch();
        
        // Proses pilihan
        switch(pilihan) {
            case '1':  // Mulai permainan
                mulaiPermainan();
                break;
                
            case '2':  // Keluar
                // Tampilkan pesan perpisahan
                clear();
                int tinggi, lebar;
                getmaxyx(stdscr, tinggi, lebar);
                
                mvprintw(tinggi/2 - 2, lebar/2 - 15, "Terima kasih telah bermain!");
                mvprintw(tinggi/2, lebar/2 - 15, "Skor Tertinggi: %d", skorTertinggi);
                mvprintw(tinggi/2 + 2, lebar/2 - 15, "Tekan tombol apa saja untuk keluar...");
                refresh();
                getch();
                
                programBerjalan = false;
                break;
                
            default:
                // Input tidak valid
                clear();
                mvprintw(10, 10, "Pilihan tidak valid! Tekan tombol...");
                refresh();
                getch();
                break;
        }
    }
    
    // Cleanup
    endwin();
    return 0;
}
